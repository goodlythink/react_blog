{
  "name": "react_blog",
  "version": "1.0.0",
  "description": "ทดสอบสร้าง Blog ด้วย React + GraphQL + Apolloสุดยอด",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev-server start-csr-dev",
    "start-csr-dev": "better-npm-run start-csr-dev",
    "dev-server": "webpack-dev-server --config config/webpack.dev.js",
    "clean": "rimraf ./public/build",
    "prebuild": "npm run clean",
    "build": "npm-run-all build-client",
    "build-client": "better-npm-run build-client"
  },
  "betterScripts": {
    "start-csr-dev": {
      "command": "node ./server/index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-client": {
      "command": "webpack --config config/webpack.prod.js --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "express": "^4.16.1",
    "isomorphic-fetch": "^2.2.1",
    "object-assign": "^4.1.1",
    "promise": "^8.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-pure-class-to-function": "^1.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "better-npm-run": "^0.1.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  }
}
